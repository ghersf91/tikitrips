<div class="container">
    <h2 class="page-title">Our users</h2>
    <div class="row">
        {{#each users}}
        <div class="col-3 mb-5 mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{profilePic}}" class="card-img-top" alt="{{username}} profile picture">
                <div class="card-body">
                    <h5 class="card-title">{{username}}</h5>
                    <p class="card-text">{{role}}</p>
                    <a href="/users/{{id}}" class="btn btn-primary">Ver perfil</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>