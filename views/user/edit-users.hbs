{{#if adminRole}}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit information for {{user.username}}</h1>
            <hr>
            <form action="/users/{{user.id}}/edit" method="POST">
                <div class="mb-3 row">
                    <div class="col">
                        <label for="email" class="form-label">Email address </label>
                        <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                        <div class="form-text">Required.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
                    <div class="form-text">Required.</div>
                </div>
                <div class="mb-3">
                    <label for="bio" class="form-label">Bio</label>
                    <input type="text" class="form-control" id="bio" name="bio" value="{{user.bio}}">
                </div>
                <div class="mb-3">
                    <label for="profilePic" class="form-label">Add a profile picture</label>
                    <input type="url" class="form-control" id="profilePic" name="profilePic"
                        value="{{user.profilePic}}">
                    <div class="form-text">Enter the URL to the profile image you want (optional).</div>
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone number</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                        value="{{user.phoneNumber}}">
                    <div class="form-text">Required.</div>
                </div>
                <div class="mb-3">
                    <label for="birth" class="form-label">
                        Enter your date of birth</label>
                    <input type="date" class="form-control" id="birth" name="birth" value="" {{!-- value missing --}}>
                    <div class="form-text">Required.</div>
                </div>

                <fieldset>
                    <legend id="userType">What kind of user are you?</legend>

                    <div>
                        <input class="form-check-input" type="radio" id="flexCheckDefault" name="role" value="PASSENGER"
                            {{#if passengerRole}}checked{{/if}}>
                        <label for="PASSENGER">Passenger</label>
                    </div>

                    <div>
                        <input class="form-check-input" type="radio" id="flexCheckDefault" name="role" value="DRIVER"
                            {{#if driverRole}}checked{{/if}}>
                        <label for="DRIVER">Driver</label>
                    </div>
                </fieldset>

                <hr>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}

