<div class="container">
    <h2 class="page-title">Details for {{user.username}}</h2>
    <div class="row">
        <div class="col-3 mb-5 mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{user.profilePic}}" class="card-img-top" alt="{{user.username}} profile picture">
                <div class="card-body">
                    <h5 class="card-title">{{user.username}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{user.bio}}</h6>
                    <p class="card-text">Email: {{user.email}}</p>
                    <p class="card-text">Phone number: {{user.phoneNumber}}</p>
                    <p class="card-text">Type of user: {{user.role}}</p>
                    <a href="/users" class="btn btn-primary">Go back</a>
                    {{#if allRoles.isAdmin}}
                    <a href="/users/{{user.id}}/edit" class="btn btn-warning">Edit</a>
                    <form action="/users/{{user.id}}/delete" method="POST" style="display: inline-block">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                    {{/if}}
                    {{#if selfUser}}
                    <a href="/users/{{user.id}}/edit" class="btn btn-warning">Edit</a>
                    <form action="/users/{{user.id}}/delete" method="POST" style="display: inline-block">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                    {{/if}}
                    <a href="/users/{{user.id}}/rate" class="btn btn-success">Rate</a>
                </div>
            </div>
        </div>
    </div>
</div>