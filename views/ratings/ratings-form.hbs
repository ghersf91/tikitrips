<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Rate {{rated}}</h1>
            <hr>

            <form action="/users/signup" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="score" class="form-label">Score (from 1 to 5):</label>
                        <input type="email" class="form-control" id="score" name="score">
                        <div class="form-text">Required.</div>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Review (max. 300 characters)</label>
                        <input type="text" class="form-control" id="comment" name="comment">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark block">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>